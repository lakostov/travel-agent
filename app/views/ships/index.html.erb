<p id="notice"><%= notice %></p>

<h1>Ships</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tonnage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ships.each do |ship| %>
      <tr>
        <td><%= ship.name %></td>
        <td><%= ship.tonnage %></td>
        <td><%= link_to 'Show', ship, :class=>"btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_ship_path(ship), :class=>"btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-sm btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ship', new_ship_path, :class=>"btn btn-lg btn-primary" %>
