<p id="notice"><%= notice %></p>
<p>Search for a cruise</p>
<%= form_tag(cruises_path, method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <%= submit_tag 'Search' %>
<% end %>

<h1>Cruises</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ship</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cruise_search_results.each do |cruise| %>
      <tr>
        <td><%= cruise.name %></td>
        <td><%= cruise.ship.name %></td>
        <td><%= link_to 'Show', cruise, :class=>"btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_cruise_path(cruise), :class=>"btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', cruise, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-sm btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cruise', new_cruise_path, :class=>"btn btn-lg btn-primary" %>
