<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Cruise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.customer.first_name+" "+reservation.customer.last_name %></td>
        <td><%= reservation.cruise.name %></td>
        <td><%= link_to 'Show', reservation, :class=>"btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation), :class=>"btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-sm btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path, :class=>"btn btn-lg btn-primary" %>
